<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ti_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="2dp"
        android:background="@drawable/label_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ti_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:paddingHorizontal="2dp"
            android:textAlignment="center"
            android:textColor="@color/deactive"
            android:textSize="14dp"
            tools:text="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/ti_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/deactive"
                android:textSize="12dp"
                tools:text="9:00" />

            <TextView
                android:id="@+id/ti_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/deactive"
                android:textSize="12dp"
                tools:text="10:30" />
        </LinearLayout>

        <TextView
            android:id="@+id/ti_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:text="0123456789 0123456789 0123456789 0123456789 0123456789" />

    </LinearLayout>

</LinearLayout>